_lttng_relayd() {
  local context state state_descr line curcontext="$curcontext"
  local ret=1
  typeset -A opt_args

  _arguments -C -s -w : \
      '(-d --daemonize -b --background)'{-d,--daemonize}'[start as daemon]' \
      '(-b --background -d --daemonize)'{-b,--background}'[start as daemon, keep console open]' \
      '(-C --control-port)'{-C,--control-port}'[control port URL]:control port URL: ' \
      '(-D --data-port)'{-D,--data-port}'[data port URL]:data port URL: ' \
      '(-L --live-port)'{-L,--live-port}'[live port URL]:live port URL: ' \
      '(-o --output)'{-o,--output}'[trace output path]:trace output path:_directories' \
      '(-v --verbose)'{-v,--verbose}'[increase verbosity]' \
      '(-g --group)'{-g,--group}'[tracing group name]:tracing group name:_groups' \
      '(-f --config)'{-f,--config}'[path to configuration file]:configuration file path:_files' \
      '(-V --version)'{-V,--version}'[show version]' \
      '(- : *)'{-h,--help}'[show help]' && ret=0

  return ret
}

_lttng_relayd "$@"
